<UserControl x:Class="newsread.View.PostWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:newsread.View"
             mc:Ignorable="d"
             d:DesignHeight="255" d:DesignWidth="200">
    <Grid VerticalAlignment="Center" Background="White" Height="400">
        <TextBlock Text="From" Margin="16,84,156,301"/>
        <TextBlock Text="Subject" Margin="16,105,123,280"/>
        <TextBlock Text="Group" Margin="16,126,123,259"/>
        <TextBox x:Name="FromText" TextAlignment="Center" Margin="60,84,16,300" />
        <TextBox x:Name="SubjectText" TextAlignment="Center" Margin="60,105,16,279" />
        <TextBox x:Name="GroupText" TextAlignment="Center" Margin="60,126,16,258" />
        <Button  Name="Post" Content="Post" Margin="16,246,16,132"/>
        <TextBox x:Name="Article" TextAlignment="Center" Margin="16,147,16,159" />
        <Button  x:Name="Back" Content="Back" Command="{Binding BacktoHubCMD}" Margin="16,273,16,105"/>
    </Grid>
</UserControl>